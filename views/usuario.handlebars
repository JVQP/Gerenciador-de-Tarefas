{{! FICHA DE CADASTRO}}


<main class="formulario_usuario">
  <h1>Ficha de cadastro</h1>

{{#if mensagemSucesso}}

<div class="alerta-login">
  <p class="btn btn-success">{{mensagemSucesso}}</p>
</div>

{{else if mensagemErro}}

<div class="alerta-login">
    <p class="btn btn-danger">{{mensagemErro}}</p>
</div>

{{/if}}
 

  <form action="/usuario" method="post" class="row g-3">
    <div class="col-md-6">
      <label for="inputNome" class="form-label">Nome</label>
      <input type="text" class="form-control" id="inputNome" name="nome">
    </div>

    <div class="col-md-6">
      <label for="inputEmail4" class="form-label">Email</label>
      <input type="email" class="form-control" id="inputEmail4" name="email">
    </div>
    <div class="col-md-6">
      <label for="inputUsuario" class="form-label">Usuario</label>
      <input type="text" class="form-control" id="inputUsuario" name="usuario">
    </div>

    <div class="col-md-6">
      <label for="inputSenha" class="form-label">Senha</label>
      <input type="password" class="form-control" id="inputSenha" name="senha">
    </div>

    <div class="col-md-6">
      <label for="inputConfirmar" class="form-label">Confirmar senha</label>
      <input type="password" class="form-control" id="inputConfirmar" name="confirmar_senha">
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-primary">Cadastrar</button>
      <button type="reset" class="btn btn-primary">Limpar</button>
    </div>

  </form>

</main>