{{#each tarefas}}
<main class="formulario_tarefas">
    <h1>Editar tarefa</h1>

   {{#if mensagemSucesso}}

<div class="alerta-login">
  <p class="btn btn-success">{{mensagemSucesso}}</p>
</div>

{{else if mensagemErro}}

<div class="alerta-login">
    <p class="btn btn-danger">{{mensagemErro}}</p>
</div>

{{/if}}

    <form action="/editar" method="post" class="row g-3">
        
            <input type="hidden" class="form-control" id="" name="id" value="{{this.id}}">
        

        <div class="col-md-6">
            <label for="Descricao" class="form-label">Descrição do Problema</label>
            <input type="text" class="form-control" id="inputDescricao" name="editar_descricao" value="{{this.descricao}}">
        </div>
        <div class="col-md-6">
            <label for="Data" class="form-label">Data</label>
            <input type="date" class="form-control" id="Data" name="editar_data" value="{{this.data}}">
        </div>
        <div class="col-md-4">
            <label for="Situacao" class="form-label">Situação</label>
            <select id="Situacao" class="form-select" name="editar_situacao" value = "">
                <option selected>{{this.situacao}}</option>
                <option>Crítica</option>
                <option>Moderado</option>
                <option>Leve</option>
            </select>
        </div>

        <div class="col-md-4">
            <label for="usuario" class="form-label">Usuario</label>
             <input type="text" class="form-control" name="editar_usuario" value="{{this.tarefa_usuario}}">
        </div>


        <div class="col-md-4">
            <label for="concluido_andamento" class="form-label">Concluido/Em andamento</label>
            <select id="concluido_andamento" class="form-select" name="editar_concluido_andamento">
                <option selected>{{this.conclusao}}</option>
                <option>Concluido</option>
                <option>Analisando</option>
            </select>    
    </div>

     <div class="col-12">
      <button type="submit" class="btn btn-primary">Editar</button>
      <button type="reset" class="btn btn-warning">Limpar</button>
    </div>
  
    </form>
      {{/each}}   
  